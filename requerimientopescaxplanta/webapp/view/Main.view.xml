                                                    suggestionRows="{path:'modelReqPescaxPlanta>/ListTemporada', sorter : {path : 'CDPCN', descending : true}, templateShareable:true}"
                                                    suggestionItemSelected=".onSuggestionTemporadaItemSelected">
