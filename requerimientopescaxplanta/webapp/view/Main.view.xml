                        <core:Title text="Selección de Datos" level="Auto" icon="sap-icon://filter"/>
                    </form:title>
                    <form:formContainers>
                        <form:FormContainer visible="true">
                            <form:formElements>
                                <form:FormElement visible="true">
                                    <form:label>
